{
  "hosting": {
    "public": "dist",
    "rewrites": [{
      "source": "/buttons/simple",
      "function": "simpleSVGButton"
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
